# Telegram (used by alerter AND api-proxy — same var name everywhere)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890
ALERT_MAX_PER_MINUTE=10

# LLM Proxy (FastAPI) — Anthropic/OpenAI
LLM_API_BASE=https://api.anthropic.com
LLM_API_KEY=sk-ant-your-real-api-key-here
LLM_API_PROVIDER=anthropic

# Brave Search (optional)
BRAVE_API_KEY=

# GitHub (optional)
GITHUB_TOKEN=

# Google API (optional) — OAuth2 for Calendar/Gmail/Drive
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# Viber (optional)
VIBER_BOT_TOKEN=

# Resource Limits
SURICATA_CPU_LIMIT=1.0              # Max CPU cores for Suricata container
SURICATA_MEM_LIMIT=512M             # Max memory for Suricata container
SURICATA_DETECT_THREAD_RATIO=0.5    # Detect threads per CPU (default 1.0, lower = fewer threads)
TRACEE_CPU_LIMIT=0.5                # Max CPU cores for Tracee container
TRACEE_MEM_LIMIT=256M               # Max memory for Tracee container

# Scheduling
DAILY_REPORT_HOUR=0        # Hour (0-23) to send daily traffic summary via Telegram
RULE_UPDATE_HOUR=3         # Hour (0-23) to update Suricata rules

# Host Ports
SECURITY_LLM_PROXY_PORT=10001
SECURITY_API_PROXY_PORT=10000

# OpenClaw Container Packages (build arg for docker-setup.sh)
# Export this before running docker-setup.sh to bake into the image:
#   export OPENCLAW_DOCKER_APT_PACKAGES="..."  ./docker-setup.sh
OPENCLAW_DOCKER_APT_PACKAGES=chromium fonts-liberation fonts-noto-color-emoji libasound2 libatk-bridge2.0-0 libatk1.0-0 libcups2 libdbus-1-3 libdrm2 libgbm1 libgtk-3-0 libnspr4 libnss3 libxcomposite1 libxdamage1 libxfixes3 libxkbcommon0 libxrandr2 xdg-utils xvfb ffmpeg imagemagick graphviz pandoc tesseract-ocr tesseract-ocr-ukr poppler-utils libxml2-utils jq sqlite3 ripgrep python3-pip python3-venv build-essential gnupg wget file tree less dnsutils netcat-openbsd p7zip-full htop zip unzip

# LLM Guard — hidden Unicode and prompt injection detection
GUARD_ENABLED=true
GUARD_STRIP_HIDDEN_UNICODE=true
# GUARD_URL=http://security-guard:8000/scan   # optional external guard
# GUARD_THRESHOLD=0.8
